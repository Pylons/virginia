<configure 
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.repoze.org/browser"
	           i18n_domain="repoze.bfg">

  <include package="repoze.bfg" />

  <!-- default views: publisher will call these -->

  <browser:page
      for=".interfaces.IFile"
      class=".browser.FileView"
      permission="repoze.view"
      />

  <browser:page
      for=".interfaces.IDirectory"
      class=".browser.DirectoryView"
      permission="repoze.view"
      />

  <!-- custom views: FileView will call these -->

  <browser:page
      for=".interfaces.IFile"
      class=".browser.StructuredTextView"
      name=".stx"
      permission="repoze.view"
      />

  <browser:page
      for=".interfaces.IFile"
      class=".browser.RawView"
      name=".html"
      permission="repoze.view"
      />

  <browser:page
      for=".interfaces.IFile"
      class=".browser.RawView"
      name=".pdf"
      permission="repoze.view"
      />

  <browser:page
      for=".interfaces.IFile"
      class=".browser.RawView"
      name=".txt"
      permission="repoze.view"
      />

  <browser:page
      for=".interfaces.IFile"
      class=".browser.RawView"
      name=".jpg"
      permission="repoze.view"
      />

</configure>
