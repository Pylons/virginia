<configure 
    xmlns="http://namespaces.zope.org/zope"
    xmlns:bfg="http://namespaces.repoze.org/bfg"
	           i18n_domain="repoze.bfg">

  <include package="repoze.bfg" />

  <!-- default views: publisher will call these -->

  <bfg:view
      for=".interfaces.IFile"
      factory=".browser.FileView"
      permission="repoze.view"
      />

  <bfg:view
      for=".interfaces.IDirectory"
      factory=".browser.DirectoryView"
      permission="repoze.view"
      />

  <!-- custom views: FileView will call these -->

  <bfg:view
      for=".interfaces.IFile"
      factory=".browser.StructuredTextView"
      name=".stx"
      permission="repoze.view"
      />

  <bfg:view
      for=".interfaces.IFile"
      factory=".browser.RawView"
      name=".html"
      permission="repoze.view"
      />

  <bfg:view
      for=".interfaces.IFile"
      factory=".browser.RawView"
      name=".pdf"
      permission="repoze.view"
      />

  <bfg:view
      for=".interfaces.IFile"
      factory=".browser.RawView"
      name=".txt"
      permission="repoze.view"
      />

  <bfg:view
      for=".interfaces.IFile"
      factory=".browser.RawView"
      name=".jpg"
      permission="repoze.view"
      />

</configure>
